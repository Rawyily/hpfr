
.van-search {
    margin: 0;
    padding: 0;
    border: 0;
  }
.van_search_custom_class{
    width: 100%;
    height: 100%;
    border-radius:50rpx;
}
.van_search_input_class{
    font-size: 30rpx;
}

/* 顶部导航栏 */
.tab {
    display: flex;
    height: 70rpx;
}
.tab view {
    flex: 1;
    height: 50rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    line-height:50rpx;
    text-align: center;
}
#active{
    background-color: rgba(255, 255, 255, 0.2);
}

/* include */
.content {
    width: 750rpx;
    height:100%;
}

.content swiper {
    height: inherit;
}
/* include公用css */
.mp-loading{
    width: 250rpx;
    position: absolute;
    top: 50%;
    left: 250rpx;
}
.scrollbox{
    border: 0;
    margin: 0;
    padding: 0;
    margin-left: 15rpx;
    margin-right: 15rpx;
    display: flex;
    height: 100%;
}
.scrollview{
    position: relative;
    height: 100%;
}
.imgbox{
    float: left;
    width: 220rpx;
    height: 220rpx;
    margin: 10rpx;
}
.imgbox .img{
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;

}
.loaded{
    width: 750rpx;
    height: 120rpx;
    /* background-color: #fff; */
    line-height: 120rpx;
    text-align: center;
    float: left;
    color: #ffaaaa;
}