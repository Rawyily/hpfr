
page {
    background: rgb(238, 238, 238);
}

.swiper {
    width: 100vw;
    height: 100vh;
}

.title {
    width: 750rpx;
    background: rgb(238, 238, 238);
    position: relative;
}

.title .titletext {
    position: absolute;
    bottom: 0;
    text-align: center;
    font-weight: bold;
}

.scrollview {
    width: 720rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    /* background-color: rgb(255, 0, 0); */
}

.scrollview .scrollview_view {
    width: 100%;
    /* background-color: rgb(255, 155, 155); */
}
.advertising{
    width: 720rpx;
    height: 200rpx;
    float: left;
}
.advertising image{
    width: 720rpx;
    height: 200rpx;
}
.imgbox {
    float: left;
    width: 220rpx;
    height: 220rpx;
    margin: 10rpx;
    background-color: #fff;
}

.imgbox .img {
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;
}

.loaded {
    width: 750rpx;
    height: 120rpx;
    /* background-color: #fff; */
    line-height: 120rpx;
    text-align: center;
    float: left;
    color: #ffaaaa;
}

.mp-loading {
    width: 250rpx;
    position: absolute;
    top: 50%;
    left: 250rpx;
}