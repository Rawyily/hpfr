/* pages/headPortrait/search/search.wxss */

page {
    background: rgb(238, 238, 238);
}

.swiper {
    width: 100vw;
    height: 100vh;
}

.title {
    width: 750rpx;
    background: rgb(238, 238, 238);
    position: relative;
}

.title .titletext {
    position: absolute;
    bottom: 0;
    text-align: center;
    font-weight: bold;
    text-overflow:ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.scrollview {
    width: 720rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    /* background-color: rgb(255, 0, 0); */
}

.scrollview .scrollview_view {
    width: 100%;
    /* background-color: rgb(255, 155, 155); */
}

.advertising {
    width: 720rpx;
    height: 200rpx;
    float: left;
}

.advertising image {
    width: 720rpx;
    height: 200rpx;
}

.imgbox {
    float: left;
    width: 220rpx;
    height: 220rpx;
    margin: 10rpx;
    background-color: #fff;
}

.imgbox .img {
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;
}

.loaded {
    width: 750rpx;
    height: 120rpx;
    /* background-color: #fff; */
    line-height: 120rpx;
    text-align: center;
    float: left;
    color: #ffaaaa;
}

.mp-loading {
    width: 250rpx;
    position: absolute;
    top: 50%;
    left: 250rpx;
}

/* gather 集合 */
.gather {
    float: left;
    width: 720rpx;
    height: 220rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    background-color: rgb(255, 250, 245);
    position: relative;
    border-radius: 5px;
}

.gather:active {
    background-color: rgb(255, 249, 158);
}

.gather .cover {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    background-color: rgb(255, 235, 235);
    /* opacity: 0.5; */
}

.gather .cover image {
    width: 200rpx;
    height: 200rpx;
}

.gather .gathertitle {
    width: 420rpx;
    height: 89rpx;
    position: absolute;
    left: 230rpx;
    top: 0;
    line-height: 90rpx;
    font-weight: bold;
    border-bottom: 1rpx solid rgb(233, 233, 233);
    /* background-color:rgb(255, 128, 0); */
}

.gather .arrowicon {
    position: absolute;
    right: 0;
    top: 0;
    width: 70rpx;
    height: 90rpx;
    /* background-color: rgb(51, 255, 0); */
    /* z-index: 1; */
}

.gather .introduce {
    width: 490rpx;
    height: 100rpx;
    position: absolute;
    bottom: 25rpx;
    right: 10rpx;
    font-size: 22rpx;
    text-overflow: ellipsis;
    color: rgb(29, 29, 29);
    font-family: cursive;
    font-weight: bold;
    letter-spacing: -2 rpx;
    line-height: 25rpx;
}

.gather .time {
    width: 400rpx;
    height: 25rpx;
    position: absolute;
    right: 10rpx;
    bottom: 0;
    text-align: right;
    font-size: 20rpx;
    font-weight: bold;
    line-height: 25rpx;
    color: tomato;
}