/* pages/home/createHeadPortrait/createHeadPortrait.wxss */
.title {
    position: absolute;
    text-align: center;
}

.canvas {
    border: 1px dotted #ffacac;
    height: 480rpx;
    width: 480rpx;
    margin: auto;
}
.canvas:active{
    border: 2px dotted #ffacac;
}
.button_HeadPortrait {
    width: 750rpx;
    margin-top: 120rpx;
    position: relative;
}

.button_HeadPortrait view {
    width: 200rpx;
    height: 75rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: bolder;
    border-radius: 2px;
}

.button_HeadPortrait view:active {
    border: 1px solid #ffffff;
}

.button_ChooseHeadPortrait {
    position: absolute;
    left: 37.5rpx;
    color: #ff4800;
    border: 1px solid #ff4800;
}

.button_UploadHeadPortrait {
    margin: auto;
    color: #ffffff;
    border: 1px solid rgba(28, 177, 92, 1);
    background-color: rgba(28, 177, 92, 1);

}
.button_UploadHeadPortrait:active{
    color: #ff4800;

}
.button_ModifyTheHeadPortrait {
    position: absolute;
    top: 0;
    right: 37.5rpx;
    border: 1px solid rgba(28, 177, 92, 1);
    color: rgba(28, 177, 92, 1);
}

.icon1 {
    font-size: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    position: absolute;
    right: 20rpx;
    top: 280rpx;
    border-radius: 40rpx;
}

.icon2 {
    font-size: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    position: absolute;
    right: 20rpx;
    top: 380rpx;
    border-radius: 40rpx;
}

.icon3 {
    font-size: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    position: absolute;
    right: 20rpx;
    top: 480rpx;
    border-radius: 40rpx;
}

.icon1 image {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    width: 70rpx;
    height: 70rpx;
}

.icon2 image {
    width: 90rpx;
    height: 90rpx;
}

.icon3 image {
    width: 90rpx;
    height: 90rpx;
}

.icon1 image:active {
    opacity: 0.6;
}

.icon2 image:active {
    opacity: 0.6;

}

.icon3 image:active {
    opacity: 0.6;
}

.button_ChooseHeadPortraitFrame {
    width: 250rpx;
    height: 75rpx;
    border: 1px solid #ff0040;
    color: #ff0040;
    position: relative;
    top: 50rpx;
    margin: auto;
    line-height: 75rpx;
    text-align: center;
    border-radius: 2px;
    font-weight: bolder;
}

.button_ChooseHeadPortraitFrame:active {
    border: 1px solid rgb(0, 0, 0);
}

.save {
    width: 750rpx;
    height: 50rpx;
    margin-top: 100rpx;

}

.save view {
    width: 250rpx;
    height: 50rpx;
    float: left;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    color: rgb(44, 44, 44);
}

.save view:active {
    color: crimson;
}

.choosePX {
    width: 750rpx;
    height: 80rpx;
    margin-top: 50rpx;
    position: relative;
}

.choosePX .sliderbox {
    width: 600rpx;
    height: 80rpx;
    position: relative;
    margin-left: 50rpx;
}

.sliderbox .slider {
    width: 550rpx;
    position: absolute;
    top: 0;
}

.choosePX .downloadIcon {
    width: 100rpx;
    position: absolute;
    top: -10rpx;
    right: 0rpx;
    animation: myfirst 2s;
}

.choosePX .downloadIcon mp-icon:active {
    position: relative;
    top: -30rpx;
}

@keyframes myfirst {
    0% {
        position: absolute;
        top: -10rpx;
        right: 750rpx;
    }
    100% {
        position: absolute;
        top: -10rpx;
        right: 0rpx;
    }
}