/* pages/home/infringement/infringement.wxss */
.tab {
    display: flex;
    height: 70rpx;
    width: 750rpx;
}

.tab .itemtab {
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

#active {
    background-color: rgba(255, 255, 255, 0.2);
}

/* myInfringement */
.addNewInfringement {
    background-color: rgba(255, 255, 255, 0.5);
    width: 730rpx;
    height: 200rpx;
    line-height: 200rpx;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
}

.addNewInfringement:active {
    opacity: 0.8;
    color: dimgrey;
    background-color: rgba(230, 230, 230, 0.699);
}

/* newInfringement */

.steps {
    width: 720rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    color: rgb(102, 0, 0);
    clear: left;
}

.second_imgbox {
    width: 220rpx;
    /* height: 440rpx; */
    margin: 10rpx;
    float: left;
    padding: 0;
    /* border: 1rpx dashed rgba(83, 83, 83, 0.349); */
    position: relative;

}

#choosebutton {
    width: 220rpx;
    margin: 10rpx;
    height: 300rpx;
    background-color: rgba(0, 0, 0, 0.233);
    line-height: 300rpx;
    text-align: center;
    float: left;
}


#choosebutton:active {
    background-color: rgba(0, 0, 0, 0.466);
}

.delimg {
    position: absolute;
    bottom: 12rpx;
    right: 0;
    background-color: rgb(255, 172, 172);
}

.delimg:active {
    background-color: rgb(255, 0, 0);
}

.textarea500 {
    background-color: rgb(254, 255, 247);
    width: 720rpx;
    height: 1500rpx;
    border-radius: 3px;
}

.vanfieldcss {
    font-size: 32rpx;
}

/* myInfringementList */
.myInfringementList {
    width: 730rpx;
    height: 220rpx;
    background-color: rgba(255, 250, 250, 0.8);
    /* border-radius: 5px; */
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    position: relative;
}

.myInfringementList .myInfringementList_imgbox {
    width: 220rpx;
    height: 220rpx;
    float: left;
    /* background-color: rgb(255, 0, 0); */
}

.myInfringementList .myInfringementList_imgbox image {
    width: 220rpx;
    height: 200rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
    /* background-color: rgb(57, 231, 4); */
}

.myInfringementList .myInfringementList_id {
    width: 500rpx;
    height: 40rpx;
    /* background-color: #fff; */
    font-size: 24rpx;
    position: absolute;
    top: 0;
    right: 0;
    line-height: 40rpx;
    /* text-align: center; */
    color: chocolate;
}

.myInfringementList .myInfringementList_id:active {
    font-weight: bold;
}

.myInfringementList .myInfringementList_classify {
    position: absolute;
    top: 40rpx;
    right: 0;
    width: 500rpx;
    height: 60rpx;
    /* text-align: center; */
    font-size: 28rpx;
    line-height: 60rpx;
    /* background-color: #fff; */
    color: rgb(88, 88, 88);
}

.myInfringementList .myInfringementList_classify view {
    font-size: 38rpx;
    color: blue;
    display: inline;
}

.myInfringementList .myInfringementList_reviewTheResults {
    width: 280rpx;
    height: 100rpx;
    background-color: #fff;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    border: 2px dotted rgb(130, 130, 130);
    text-align: center;
    line-height: 100rpx;
    font-weight: bold;
    font-size: 60rpx;
    color: rgb(130, 130, 130);
}

.myInfringementList .time {
    width: 200rpx;
    height: 100rpx;
    /* background-color: rgb(196, 196, 196); */
    position: absolute;
    bottom: 10rpx;
    left: 220rpx;
}

.myInfringementList .time .day {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 30rpx;
    color: rgb(255, 123, 0);
}

.myInfringementList .time .ym {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 30rpx;
    color: rgb(255, 127, 104);
}