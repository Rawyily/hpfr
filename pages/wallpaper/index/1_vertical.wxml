<block wx:if="{{vertical.length > 0}}">
    <view class="scrollbox">
        <!-- 加载一次的数据 -->
        <scroll-view scroll-top="{{vertical_scrollTop}}" enhanced="true" show-scrollbar="{{false}}" scroll-y="true" bindscrolltolower="getvertical" class="scrollview">
            <view wx:for="{{vertical}}" wx:key="index">
                <!-- 广告 -->
                <view style="height: 200rpx;width: 750rpx;float: left;overflow: hidden;" wx:if="{{vertical_advertising_img[index].imgurl}}">
                    <image catchtap="previewImage" data-url="{{vertical_advertising_img[index].imgurl}}" style="height: 200rpx;width: 750rpx;position: relative;" mode="scaleToFill" src="{{vertical_advertising_img[index].imgurl}}"></image>
                </view>
                <!-- 壁纸 -->
                <view wx:for="{{item.array}}" wx:key="index" class="vertical_imgbox">
                    <image mode="widthFix" src="{{item.thumbnail}}" catchtap="details" data-data="{{item}}"></image>
                </view>
                <view class="vertical_imgbox"></view>
            </view>
            <!-- mp-loading加载提示 -->
            <view style="width: 750rpx; height: 100rpx;float: left;" wx:if="{{vertical_loading}}">
                <mp-loading style="position: relative;top: 40rpx;"></mp-loading>
            </view>
            <!-- 全部加载完成提示 -->
            <view class="loaded" wx:if="{{vertical_end}}">-END-</view>
        </scroll-view>
    </view>
</block>
<block wx:else>
    <mp-loading class="mp-loading" />
</block>