<view style="width: 750rpx;height: 100vh;display:flex;flex-direction:column;">
    <view bindtap="scrollTop" style="width: 750rpx;height: {{statusBarHeight}}px;"></view>
    <view style="width: {{MenuLeft-(windowWidth - MenuRight)*2}}px;height: {{MenuBottom - statusBarHeight}}px;left: {{windowWidth - MenuRight}}px;">
        <van-search bind:search="bindselectresult" custom-class="van_search_custom_class" input-class="van_search_input_class" background="none" field-class="van_search_field_class" shape="round" value="{{ value }}" input-align="left" placeholder="搜索" />
    </view>
    <view class="tab">
        <view class="item-tab" id="{{tap==0 ? 'active':''}}" bindtap="changeItemID" data-itemID="0">横屏</view>
        <view class="item-tab" id="{{tap==1 ? 'active':''}}" bindtap="changeItemID" data-itemID="1">竖屏</view>
        <view class="item-tab" id="{{tap==2 ? 'active':''}}" bindtap="changeItemID" data-itemID="2">关键词</view>
        <view class="item-tab" id="{{tap==3 ? 'active':''}}" bindtap="changeItemID" data-itemID="3">贴子</view>
    </view>
    <view style="flex: 1;">
        <view class="content">
            <swiper current="{{item_id}}" bindchange="changeTap">
                <swiper-item item-id="0">
                    <include src="0_across.wxml"></include>
                </swiper-item>
                <swiper-item item-id="1">
                    <include src="1_vertical.wxml"></include>
                </swiper-item>
                <swiper-item item-id="2">
                    <include src="2_keywords.wxml"></include>
                </swiper-item>
                <swiper-item item-id="3">
                    <include src="3_post.wxml"></include>
                </swiper-item>
            </swiper>
        </view>
    </view>
</view>