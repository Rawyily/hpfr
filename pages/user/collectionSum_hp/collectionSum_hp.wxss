/* 状态栏 */
.starusBar {
    z-index: 100;
    position: absolute;
    top: 0;
    background-color: rgba(255, 248, 220, 0);
    width: 750rpx;
}

.title {
    position: absolute;
    bottom: 0;
    text-align: center;
    font-weight: bold;
    letter-spacing: 5rpx;
}
/* 导航栏 */
.tab {
    display: flex;
}

.tab view {
    flex: 1;
    height: 50rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    line-height: 50rpx;
    text-align: center;
}

#active {
    background-color: rgba(255, 255, 255, 0.2);
}

/* 滑动区域 */
.content {
    width: 750rpx;
    /* background-color: #fff; */
    position: absolute;
    bottom: 0;
}

.content swiper {
    height: 100%;
    /* background-color: rgb(255, 187, 187); */
}
