/* 公用.wxml */

/* 1.all.wxml */
.scrollbox {
    border: 0;
    margin: 0;
    padding: 0;
    margin-left: 15rpx;
    margin-right: 15rpx;
    display: flex;
    height: 100%;
}
.scrollview {
    position: relative;
    height: 100%;
}
/* 头像 */
.imgbox {
    float: left;
    width: 220rpx;
    height: 220rpx;
    margin: 10rpx;
}

.imgbox .img {
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;

}
.end {
    width: 750rpx;
    height: 120rpx;
    /* background-color: #fff; */
    line-height: 120rpx;
    text-align: center;
    float: left;
    color: #ffaaaa;
}
.mp-loading {
    width: 250rpx;
    position: absolute;
    top: 50%;
    left: 250rpx;
}
/* gather 集合 */
.gather{
    width: 720rpx;
    height: 220rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    background-color:rgb(255, 250, 245);
    position: relative;
    border-radius: 5px;
}
.gather:active{
    background-color:rgb(245, 255, 253);
}
.gather .cover{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    background-color: rgb(255, 230, 230);
}
.gather .cover image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.gather .title{
    width: 420rpx;
    height: 89rpx;
    position: absolute;
    left: 250rpx;
    top: 0;
    line-height: 90rpx;
    font-weight: bold;
    border-bottom: 1rpx solid rgb(255, 214, 214);
}
.gather .arrowicon {
    position: absolute;
    right: 0;
    top: 0;
}
.gather .introduce{
    width: 490rpx;
    height: 100rpx;
    position: absolute;
    bottom: 25rpx;
    right: 10rpx;
    font-size: 22rpx;
    text-overflow: ellipsis;
    color: rgb(29, 29, 29);
    font-family:cursive;
    font-weight: bold;
    letter-spacing:-2 rpx;
    line-height: 25rpx;
}
.gather .time {
    width: 400rpx;
    height: 25rpx;
    position: absolute;
    right: 10rpx;
    bottom: 0;
    text-align: right;
    font-size: 20rpx;
    font-weight: bold;
    line-height: 25rpx;
    color: tomato;
}
